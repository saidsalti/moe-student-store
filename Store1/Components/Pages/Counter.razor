@page "/counter"
@rendermode InteractiveServer
@inject ISnackbar Snackbar
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>عداد</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">عداد</MudText>

<MudText Typo="Typo.body1" Class="mb-4">Current count: @currentCount</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">+</MudButton>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="DecrementCounter">-</MudButton>

@code {
    private int currentCount = 0;
    protected override void OnInitialized()
    {
        Snackbar.Configuration.MaxDisplayedSnackbars = 10;
        Snackbar.Add("السلام عليكم", Severity.Success);
        base.OnInitialized();
    }
    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCounter(){
        if(currentCount>0){
            currentCount--;

        }
    }
}
